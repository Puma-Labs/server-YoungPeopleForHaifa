<%
  const dir = lang === "he" ? "rtl" : "ltr"
  const eventsList = data || []
  const emptyCover = "/static/assets/images/preview-empty.png"
%>

<main>

  <section class="future-events-section" dir=<%= dir %>>
    <div class="section-title">
      <h2>Будущие события</h2>
    </div>
    <div class="events-container <%= dir %>">
      <% upcomingEvents.map((event, i) => { %>
        <a href="/events/<%= event.id %>">
          <div class="event <%= (i === 0) ? 'event-1' : '' %>">
            <button class="options-menu _icon-ico-menu"></button>
            <div class="img-container <%= (!event.cover) ? 'empty' : '' %>">
              <img src=<%= event.cover || emptyCover %> alt=""/>
            </div>
            <h4 class="event-title"><%= event.title %></h4>
            <div class="event-info">
              <%= moment(event.date).format("DD.MM.YYYY") %> - <%= moment(event.time).format("hh:mm") %> - <%= event.place %>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
  </section>

  <section class="all-events-section" dir=<%= dir %>>
    <div class="section-title">
      <h2>Все мероприятия</h2>
      <button class="calendar-btn">
        <span class="_icon-ico-calendar" id="calendarToggle"></span>
      </button>
    </div>
    <div class="wrapper">
      <div class="calendar-container" id="calendarMenu">
        <div class="top">
          <div class="title">
            Дата события
          </div>
          <span class="calendar-ico _icon-ico-calendar"></span>
        </div>
        <div class="calendar">
          <form id="datepickerForm">
            <div>
              <div class="input-wrapper <%= dir %>">
                <label for="datepicker">Дата</label>
                <input class="input" id="datepicker" placeholder="дд/мм/гггг" readonly>
              </div>
            </div>
            <div class="buttons">
              <button type="button" id="resetButton">Сбросить</button>
              <button type="submit">Выбрать</button>
            </div>
          </form>
        </div>
      </div>
      <div class="events">
        <div id="allEvents-container" class="events-container <%= dir %>">
          <% eventsList.map(event => { %>
            <a href="/events/<%= event.id %>">
              <div class="event">
                <button class="options-menu _icon-ico-menu"></button>
                <div class="img-container <%= (!event.cover) ? 'empty' : '' %>">
                  <img src=<%= event.cover || emptyCover %> alt=""/>
                </div>
                <h4 class="event-title"><%= event.title %></h4>
                <div class="event-info">
                  <%= moment(event.date).format("DD.MM.YYYY") %> - <%= moment(event.time).format("hh:mm") %> - <%= event.place %>
                </div>
              </div>
            </a>
          <% }) %>
        </div>
        <div class="pagination">
          <button class="prev-btn <%= dir %>">
            <div class="arrow btn-arrow _icon-ico-arrow-short"></div>
          </button>
          <div class="pages">
            <% for(let i = 1; i < 8; i++) { %>
              <button class="page-num"><%= i %></button>
            <% } %>
            <span class="dots">...</span>
            <button class="page-num">18</button>
          </div>
          <button class="next-btn <%= dir %>">
            <div class="arrow btn-arrow _icon-ico-arrow-short"></div>
          </button>
        </div>
      </div>
    </div>

  </section>

</main>

<%- contentFor('scripts') %>

<script>
  const calendarToggle = document.getElementById("calendarToggle");
  const calendarMenu = document.getElementById("calendarMenu");

  calendarToggle.addEventListener("click", function (event) {
    // event.preventDefault();

    calendarToggle.classList.toggle("active");
    calendarMenu.classList.toggle("active");
  });

  const pageNumButtons = document.querySelectorAll('.page-num');

  pageNumButtons.forEach((button) => {
    button.addEventListener('click', () => {
      pageNumButtons.forEach((btn) => {
        btn.classList.remove('active');
      });

      button.classList.add('active');
    });
  });
</script>


<script src="https://unpkg.com/js-datepicker"></script>
<script type="module" src="/static/scripts/datePicker.js"></script>
