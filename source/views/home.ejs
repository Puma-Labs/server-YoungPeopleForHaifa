            <div class="event-info">
              <%= moment(event.date).format("DD.MM.YYYY") %> - <%= moment(event.time).format("hh:mm") %> - <%= event.place %>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
    <a href="/events" class="bottom-btn">
